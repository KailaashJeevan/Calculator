<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/FrameWork" android:orientation="vertical"
        android:clipToPadding="false" android:padding="0pt" android:paddingLeft="0pt" android:paddingTop="0pt"
        android:paddingRight="0pt" android:paddingBottom="0pt" android:gravity="center"
        android:background="@color/colorAccent">
    <TextView
            android:text="0"
            android:layout_width="120pt"
            android:layout_height="wrap_content" android:id="@+id/textView"
            android:gravity="right" android:textSize="40sp" android:paddingTop="30pt" android:background="@color/grey"/>
    <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="AC"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/AC" android:background="@color/mixwhite"/>
            <Button
                    android:text="+/-"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/plusOMinus" android:background="@color/mixwhite"/>
            <Button
                    android:text="%"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/modulus" android:background="@color/mixwhite"/>
            <Button
                    android:text="/"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/divide" android:background="@color/OprColor"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="7"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button-seven" android:background="@color/mixwhite"/>
            <Button
                    android:text="8"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button-eight" android:background="@color/mixwhite"/>
            <Button
                    android:text="9"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button--nine" android:background="@color/mixwhite"/>
            <Button
                    android:text="X"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/multiply" android:background="@color/OprColor"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="4"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button-four" android:background="@color/mixwhite"/>
            <Button
                    android:text="5"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button-five" android:background="@color/mixwhite"/>
            <Button
                    android:text="6"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button-six" android:background="@color/mixwhite"/>
            <Button
                    android:text="-"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/Minus" android:textSize="14sp"
                    android:background="@color/OprColor"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:text="1"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button-one" android:minWidth="88dip"
                    android:background="@color/mixwhite"/>
            <Button
                    android:text="2"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button-two" android:background="@color/mixwhite"/>
            <Button
                    android:text="3"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/button-three" android:background="@color/mixwhite"/>
            <Button
                    android:text="+"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/plus" android:background="@color/OprColor"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <Button
                android:text="0"
                android:layout_width="60pt"
                android:layout_height="30pt" android:id="@+id/zero" android:layout_weight="1"
                android:background="@color/mixwhite"/>
        <Button
                android:text="."
                android:layout_width="30pt"
                android:layout_height="30pt" android:id="@+id/dotPoint" android:layout_weight="1"
                android:background="@color/mixwhite"/>
        <Button
                android:text="="
                android:layout_width="30pt"
                android:layout_height="30pt" android:id="@+id/equalButton" android:layout_weight="1"
                android:background="@color/OprColor"/>

    </LinearLayout>

</LinearLayout>

